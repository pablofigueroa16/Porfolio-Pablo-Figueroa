<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }

  .text {
    width: fit-content;
    white-space: nowrap;
    overflow: hidden;
    visibility: hidden;
    animation: typing 5s steps(308, end) forwards;
  }

  .text:nth-child(1) {
    animation-delay: 0s;
  }

  .text:nth-child(2) {
    animation-delay: 4s;
  }

  .text:nth-child(3) {
    animation-delay: 8s;
  }

  @keyframes typing {
    from {
      width: 0%;
      visibility: visible;
    }
    to {
      width: 100%;
      visibility: visible;
    }
  }
</style>
