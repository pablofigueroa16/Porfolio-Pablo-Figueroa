---
const { title } = Astro.props;
const { src } = Astro.props;
const { description } = Astro.props;
---

<div
  class="card w-full h-48 lg:w-[48%] dark:bg-accent border-2 border-text dark:border-0 lg:h-[40vh] rounded-md"
>
  <div class="card-inner">
    <div class="card-front flex justify-center items-center w-full h-full">
      <img class="img2" src={src} />
    </div>
    <div
      class="card-back flex flex-col justify-center items-center w-full h-full dark:bg-accent"
    >
      <h3 class="text-2xl font-bold text-text dark:text-white">
        {title}
      </h3>
      <p class="text-text dark:text-white mt-2 text-center">
        {description}
      </p>
      <div>
        <slot />
      </div>
    </div>
  </div>
</div>

<style>
  .card {
    perspective: 1000px;
  }
  .card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 1s;
    transform-style: preserve-3d;
  }
  .card:hover .card-inner {
    transform: rotateY(-180deg);
  }
  .card-front,
  .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 0.375rem;
  }
  .card-back {
    color: white;
    transform: rotateY(180deg);
  }
  .img2 {
    width: 65%;
    height: auto;
  }
</style>
