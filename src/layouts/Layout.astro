---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="icon" type="image/svg+xml" href="/public/faviconpablo.png" /> -->
    <link rel="icon" type="image/svg+xml" href="/faviconpablo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="/scripts/script.js" defer></script>
  </head>
  <body
    class="dark:bg-[#13151a] dark:text-white transition-all duration-300 ease-in-out"
  >
    <slot />
  </body>
</html>
<style is:global>
  :root {
  }
  html {
    font-family: system-ui, sans-serif;
  }

  body {
    --sb-track-color: #303236;
    --sb-thumb-color: #006de1;
    --sb-size: 25px;
  }

  body::-webkit-scrollbar {
    width: var(--sb-size);
  }

  body::-webkit-scrollbar-track {
    background: var(--sb-track-color);
    border-radius: 4px;
  }

  body::-webkit-scrollbar-thumb {
    background: var(--sb-thumb-color);
    border-radius: 4px;
    border: 3px solid #232e33;
  }

  @supports not selector(::-webkit-scrollbar) {
    body {
      scrollbar-color: var(--sb-thumb-color) var(--sb-track-color);
    }
  }
</style>
